<%- layout("layouts/boilerplate") %>
<body>
    <div class="row offset-2">
        <div class="col-8">
    <h1 class="mt-3">Edit the Listing : </h1>
    
    <form method ="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mt-3"> 
            <label for="title" class="form-label">Title</label>
            <input type="text" value = "<%= listing.title %>" name= "Listing[title]" id="title" class="form-control" required>
            <div class="valid-feedback">Title Looks Good !</div>
            <div class="invalid-feedback">Enter Valid Title</div>
        </div>
        <div class="mt-3">
            <label for="description" class="form-label">Description</label>
            <textarea   name="Listing[description]" class="form-control" id="description" required><%= listing.description %></textarea>
            <div class="valid-feedback">Description Looks Good !</div>
            <div class="invalid-feedback">Enter Valid Description</div>

        </div>
        <div class="mt-3">
            <label for="image" class="form-label">image</label>
            <input type="text" value ="<%= listing.image.url%>" name="Listing[image.url]" class="form-control" id="image"required>
            <div class="valid-feedback">Looks Good !</div>
            <div class="invalid-feedback">Enter Valid Image URL</div>
        </div>
        <div class="row">
            <div class="mt-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" value ="<%= listing.price %>"  name="Listing[price]" class="form-control" id="price"required>
            <div class="valid-feedback">Looks Good !</div>
            <div class="invalid-feedback">Enter Valid Price</div>
            </div>
            <div class="mt-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" value ="<%= listing.country %>"  name="Listing[country]" class="form-control" id="country"required>
                <div class="valid-feedback">Looks Good !</div>
                <div class="invalid-feedback">Enter Valid Country Name</div>
            </div>
        </div>
        
        <div class="mt-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" value ="<%= listing.location %>"  name="Listing[location]" class="form-control" id="location"required>
            <div class="valid-feedback">Looks Good !</div>
            <div class="invalid-feedback">Enter Valid Location</div>
        </div>

        <button class="btn edit-btn mt-3 mb-3 btn-dark">Edit</button>

    </form>
    </div>
</div>

</body>
