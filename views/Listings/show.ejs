<%- layout("layouts/boilerplate") -%>
<body >
    <div class="row">
        <div class="col-8 offset-2 mt-3">
            <h2><%= listing.title %></h2>
        </div>

    <div class="col-6 offset-2">
    <div class="card show-card" style="width: 40rem;">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing img">
        <div class="card-body">

           
            <%= listing.description %><br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
            <%= listing.location %><br>
            <%= listing.country %><br>

        </div>
    </div>
    </div>
    <div class="show-btn mb-3 mt-3">
        <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark offset-2 edit-btn">Edit</a>
        <form method="Post" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    

    
    </div>

    <div class="col-8 offset-2 mt-3">
        <hr>
        <h3>Give a Review : </h3>
        <form action="/listings/<%- listing._id %>/review" method="post" novalidate class="needs-validation">
            <label for="rating" class="form-label">Rating:</label>
            <input type="range" id="rating" name="review[ratings]" min="1" max="5" class="form-range">
            <br>
            <label for="comment"  class="form-label">Comment :</label><br>
            <textarea name="review[comment]" id="comment" rows="5" cols="30"class="form-control "
            required ></textarea>
    
            <div class="invalid-feedback">please submite some comments</div>
            <br>
            <button class="btn btn-dark mb-3 add-btn">submit</button>
        </form>

        <hr>
        <ul>
            <%for(review of listing.reviews){%>
                <li><%=review.comment%> ,<%= review.ratings%></li>
            <%}%>
        </ul>
        
       
    </div>
</body>
